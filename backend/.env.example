# Port the backend listens on (default 4000)
PORT=4000

# PostgreSQL connection string (required for Prisma)
# Example: postgresql://user:password@localhost:5432/brewery_membership
DATABASE_URL="postgresql://user:password@localhost:5432/brewery_membership"

# Comma-separated emails that can sign in to the admin app (e.g. admin@brewery.com,you@brewery.com)
# These users get isAdmin: true when logging in; all admin-only API routes require one of these accounts.
ADMIN_EMAILS=admin@example.com
